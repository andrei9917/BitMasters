<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andrei.bitmasters">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".FututiMortiiMatii"
            android:label="@string/title_activity_fututi_mortii_matii"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity android:name=".GenreSlidersActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".rockPicker"
            android:label="@string/title_activity_rock_picker"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".bluesPicker"
            android:label="@string/title_activity_blues_picker" />
        <activity
            android:name=".worldPicker"
            android:label="@string/title_activity_world_picker" />
        <activity
            android:name=".electronicPicker"
            android:label="@string/title_activity_electronic_picker" />
    </application>

</manifest>